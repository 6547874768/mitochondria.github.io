        function trackProductClick() {
            gtag('event', 'product_click', {
                'event_category': 'conversion',
                'event_label': 'tired40_to_product'
            });
        }
        
        function trackLearnMoreClick() {
            gtag('event', 'learn_more_click', {
                'event_category': 'engagement',
                'event_label': 'tired40_to_guide'
            });
        }
        
        // Track scroll depth
        let scrollDepthTracked = {
            25: false,
            50: false,
            75: false,
            90: false
        };

        window.addEventListener('scroll', function() {
            const scrollPercent = (window.scrollY / (document.body.scrollHeight - window.innerHeight)) * 100;
            
            Object.keys(scrollDepthTracked).forEach(depth => {
                if (scrollPercent >= depth && !scrollDepthTracked[depth]) {
                    scrollDepthTracked[depth] = true;
                    gtag('event', 'scroll_depth', {
                        'event_category': 'engagement',
                        'event_label': `tired40_${depth}_percent`
                    });
                }
            });
        });
        
        // Track time on page
        let timeOnPage = 0;
        setInterval(function() {
            timeOnPage += 10;
            if (timeOnPage === 60) {
                gtag('event', 'time_on_page', {
                    'event_category': 'engagement',
                    'event_label': 'tired40_1_minute'
                });
            } else if (timeOnPage === 180) {
                gtag('event', 'time_on_page', {
                    'event_category': 'engagement',
                    'event_label': 'tired40_3_minutes'
                });
            }
        }, 10000);
