        function trackConversion() {
            // Track the conversion click
            gtag('event', 'tired_after_40_conversion', {
                'event_category': 'conversion',
                'event_label': 'tired_after_40_cta',
                'value': 1
            });
        }

        // Track scroll depth
        let scrollDepthTracked = {
            25: false,
            50: false,
            75: false,
            90: false
        };

        window.addEventListener('scroll', function() {
            const scrollPercent = (window.scrollY / (document.body.scrollHeight - window.innerHeight)) * 100;
            
            Object.keys(scrollDepthTracked).forEach(depth => {
                if (scrollPercent >= depth && !scrollDepthTracked[depth]) {
                    scrollDepthTracked[depth] = true;
                    gtag('event', 'scroll_depth', {
                        'event_category': 'engagement',
                        'event_label': `${depth}_percent`,
                        'value': parseInt(depth)
                    });
                }
            });
        });

        // Track time on page
        let timeOnPage = 0;
        setInterval(function() {
            timeOnPage += 10;
            if (timeOnPage === 60) { // 1 minute
                gtag('event', 'time_on_page', {
                    'event_category': 'engagement',
                    'event_label': '1_minute'
                });
            } else if (timeOnPage === 180) { // 3 minutes
                gtag('event', 'time_on_page', {
                    'event_category': 'engagement',
                    'event_label': '3_minutes'
                });
            } else if (timeOnPage === 300) { // 5 minutes
                gtag('event', 'time_on_page', {
                    'event_category': 'engagement',
                    'event_label': '5_minutes'
                });
            }
        }, 10000);

        // Track clicks to internal links
        document.querySelectorAll('.internal-link').forEach(link => {
            link.addEventListener('click', function() {
                gtag('event', 'internal_link_click', {
                    'event_category': 'engagement',
                    'event_label': this.getAttribute('href'),
                    'value': 1
                });
            });
        });
    </script>
